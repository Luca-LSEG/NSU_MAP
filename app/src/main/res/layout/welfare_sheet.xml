<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="580dp"
    android:background="@drawable/top_radius_white_background"
    app:behavior_hideable="true"
    android:clickable="true"
    android:focusable="true"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


    <!-- 표시선 -->
    <View
        android:id="@+id/view3"
        android:layout_width="30dp"
        android:layout_height="3dp"
        android:layout_marginTop="12dp"
        android:background="#171616"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



            <!--제목-->
            <TextView
                android:id="@+id/bottomSheetTitleTextView3"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:gravity="center"
                android:text="학생 복지회관"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="10dp"
                />


            <!-- 부제목 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="식당, 커피숍등 다양한 편의시설 제공"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="75dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="10dp"/>

            <!--구분선-->
            <View
                android:id="@+id/lineView3"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#cccccc"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="100dp"
                app:layout_constraintTop_toBottomOf="@id/bottomSheetTitleTextView3" />


    <!-- 스크롤 바 -->
    <ScrollView
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 시설 기본 정보 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@color/teal_200"
                android:text="🧐학복관에는 이런 편의 시설이 있어요"
                android:textSize="17dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="10dp"/>

            <!-- 시설 기본 정보 내용 -->

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <Button
                        android:id="@+id/li1"
                        android:layout_width="105dp"
                        android:layout_height="30dp"
                        android:textColor="@color/black"
                        android:background="@drawable/round_button_white"
                        android:textStyle="bold"
                        android:textSize="17dp"
                        android:text="🍎 1층 식당"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="5dp"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginRight="10dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_marginLeft="10dp"/>

                    <Button
                        android:layout_width="105dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/round_button_white"
                        android:text="🍏 2층 식당"
                       android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="@id/li1"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/li1" />

                    <Button
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/round_button_white"
                        android:text="🏪 편의점"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="@id/li1"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/li1" />

                    <Button
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/round_button_white"
                        android:text="🧻 화장실"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="@id/li1"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/li1" />

                    <Button
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/round_button_white"
                        android:text="☕ 카페"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="@id/li1"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/li1" />

                    <Button
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/round_button_white"
                        android:text="🖨 프린터실"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="@id/li1"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/li1" />

                    <Button
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/round_button_white"
                        android:text="📕 서점"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="@id/li1"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/li1" />

                    <Button
                        android:layout_width="105dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/round_button_white"
                        android:text="🎒 문구점"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="@id/li1"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/li1" />
                    <Button
                        android:layout_width="105dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/round_button_white"
                        android:text="📮 우체국"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="@id/li1"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/li1" />

                    <Button
                        android:layout_width="105dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/round_button_white"
                        android:text="☕ 브레덴코"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        app:layout_constraintLeft_toLeftOf="@id/li1"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/li1" />


                </LinearLayout>
            </HorizontalScrollView>



            <TextView
                android:id="@+id/rdd3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\n🔽 학복관 소개 "
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toBottomOf="@id/lineView3"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Open AM 08:30 ~ PM 19:00 "
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintTop_toTopOf="@id/rdd3"
                android:layout_marginTop="0dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="10dp"
                app:layout_constraintTop_toBottomOf="@id/lineView3"
                />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>